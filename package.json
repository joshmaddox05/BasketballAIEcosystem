{
  "name": "basketball-ai-ecosystem",
  "version": "1.0.0",
  "description": "Basketball training app with AI jump-shot critique, training blueprints, and community features",
  "private": true,
  "workspaces": [
    "src",
    "backend",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "pnpm --filter mobile dev",
    "dev:backend": "echo 'Backend deprecated - using Firebase-only architecture'",
    "dev:mobile": "pnpm --filter mobile dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:migrate": "tsx scripts/setup-database.ts",
    "verify": "tsx scripts/verify-infrastructure.ts",
    "firebase:emulator": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}