{
  "expo": {
    "name": "Basketball AI",
    "slug": "basketball-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.basketballai.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to record basketball shots for analysis.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for video recording."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.basketballai.app",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Basketball AI to access your camera to record basketball shots for analysis."
        }
      ]
    ],
    "scheme": "basketball-ai",
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
