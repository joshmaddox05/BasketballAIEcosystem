rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ========================================
    // DEVELOPMENT RULES - ALLOW ALL ACCESS
    // ========================================
    // WARNING: These rules allow anyone to read/write to your database
    // Only use these rules with the Firebase Emulator for local development
    // Never deploy these rules to production!
    
    // Allow all operations on all documents
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Allow database metadata operations
    match /database_metadata/{document} {
      allow read, write: if true;
    }
  }
}
